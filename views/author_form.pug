extends layout

block content
  h1=title
  form.form(method='POST' action='')
    div.form-group
      input#first_name.form-control.customInput(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      input#family_name.form-control.customInput(type='text' placeholder='Family name' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
       div.left
        label(for='date_of_birth') Date of birth:
        input#date_of_birth.form-control.customInput(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
       div.right
        label(for='date_of_death') Date of death:
        input#date_of_death.form-control.customInput(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
    button.btn.btn-primary.submitBtn(type='submit') Submit
  if errors
    ul
      for error in errors
        li.errorMsg!= error.msg
