extends layout

block content
  h1 #{title}

  div.form
    form(method='POST' action='')
      div.form-group
        label(for='name') Genre:
        input#name.form-control.customInput(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
      div.errorDiv 
        button.btn.submitBtn(type='submit') Submit
        if errors
            ul
            for error in errors
              li.errorMsg!= '* ' + error.msg 
